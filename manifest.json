{
  "manifest_version": 3,
  "name": "Page Summarizer - Gemini 2.0",
  "version": "1.0.0",
  "description": "Intelligent webpage summarization using Gemini 2.0 Flash API",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Summarize this page",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}